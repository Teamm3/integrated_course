}
.title{
	height: 50rpx;
}
.icon{
	width: 45rpx;
	height: 45rpx;
	
	text-align: center;
	vertical-align: middle;
}
.title-text{
	margin-left: 10rpx;
	font-size: 35rpx;
	font-weight: 600;
	color: #123456;
	vertical-align: middle;
	display: inline-block;
}
.line{
	height: 1px;
	margin-top: 35rpx;
	background: #CC99CC;
	width: 70%;
	margin-left: 20%;
}
.history-buttom-item{
	height: 45rpx;
	width: 210rpx;
	margin-left: 30%;
	background: #FFFFFF;
	border-width: 2rpx;
	border-color: #123456;
	border-radius: 15rpx;
	border-style: solid;
	display: inline-block;
	text-align: center;
	vertical-align: middle;
	/* align-items: center; */
	padding-bottom: 9rpx;
}
.history-buttom{
	background: #FFFFFF;
	font-size: 27rpx;
	background: #FFFFFF;
	color: #123456;
	font-weight: 400;
	text-align: center;
	vertical-align: middle;
}
.content{
	margin-top: 25rpx;
	margin-left: 8%;
	text-align: left;
}
.content-item{
	margin-bottom: 5rpx;
	vertical-align: middle;
	font-family: "Times New Roman";
	font-size: 35rpx;
	font-weight: 500;
	color: #123456;
}
.choice{
	width: 50%;
	height: 45rpx;
	margin-left: 45%;
	margin-top: 10rpx;
	background: #FFFFFF;
}
.choice-item{
	margin-right: 10rpx;
	background: #E4C9E4;
	border: #E4C9E4;
	border-style: solid;
	border-width: 1rpx;
	border-radius: 12rpx;
	width: 70rpx;
	height: 40rpx;
	font-size: 30rpx;
	font-weight: 500;
	text-align: center;
	vertical-align: middle;
	padding-bottom: 5rpx;
	display: inline-block;
	/* align-items: center; */
}
.choice-item-selected{
	margin-right: 10rpx;
	background: #FFFFFF;
	border: #E4C9E4;
	border-style: solid;
	border-width: 1rpx;
	border-radius: 12rpx;
	width: 70rpx;
	height: 40rpx;
	font-size: 30rpx;
	font-weight: 500;
	text-align: center;
	vertical-align: middle;
	padding-bottom: 5rpx;
	display: inline-block;
}
